<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/etObservation" android:hint="Observation" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etComment" android:hint="Comment (optional)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnSaveObservation" android:text="Save Observation" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
