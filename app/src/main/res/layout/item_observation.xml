<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/tvObservation" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvTime" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvComment" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnDeleteObs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delete" android:layout_marginTop="8dp"/>
</LinearLayout>
